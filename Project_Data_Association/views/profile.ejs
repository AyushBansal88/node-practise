<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Profile</title>
    <script src="https://cdn.jsdelivr.net/npm/@tailwindcss/browser@4"></script>
  </head>
  <body class="w-full min-h-screen bg-zinc-900 text-white p-10">
    <div>
      <a href="/logout" class="px-3 py-2 bg-red-500 rounded-md block ms-auto w-min">Logout</a>
    </div>
    <h3 class="text-3xl">Hello <%= user.name %> üëç</h3>
    <span class="block">you can create a new post</span>
    <form action="/create/post" method="post">
      <textarea class="border rounded-md border-zinc-500 mt-3 p-3 resize-none w-1/3" name="content" placeholder="What's on your mind ?"></textarea>
      <input class="bg-blue-500 px-5 py-2 rounded-md block" type="submit" value="Create New Post">
    </form>
    <h3 class="mt-20">Posts</h3>
    <% user.posts.reverse().forEach(function(post){ %>
      <div class="border w-1/3 rounded-md border-zinc-500 px-4 py-2 mt-2 bg-zinc-800">
        <h4 class="text-blue-600">@<%= user.username %></h4>
        <%= post.content %>
        <h6><%= post.like.length %> Likes</h6>
        <div>
          <a href="/like/post/<%= post._id %>" class="text-blue-500"><%= post.like.indexOf(user._id) ? "like" : "unlike" %></a>
          <a href="/edit/post/<%= post._id %>" class="text-zinc-500">edit</a>
        </div>
      </div>
    <% }) %>
  </body>
</html>
